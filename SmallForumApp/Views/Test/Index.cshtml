
@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

@if (await AuthorizationService.AuthorizeAsync(User, R.Administrator))
{
    <p>This paragraph is displayed because you fulfilled Administrator policy.</p>
}

@if (await AuthorizationService.AuthorizeAsync(User, R.Manager))
{
    <p>This paragraph is displayed because you fulfilled Manager policy.</p>
}

@if (await AuthorizationService.AuthorizeAsync(User, R.Moderator))
{
    <p>This paragraph is displayed because you fulfilled Moderator policy.</p>
}

@if (User.Identity.IsAuthenticated)
{
    <p>This paragraph is displayed because you are authenticated.</p>
}

<p>This paragraph is displayed to everyone.</p>